<div class="tc-drawer">
  <div class={{containerClassNames}}>
    <div class="topic-chat-drawer-header" {{on "click" (action "toggleExpand")}}>
      <span class="tc-title">{{title}}</span>
      {{d-icon this.expandIcon}}
    </div>
    <div class="topic-chat-drawer-content">
      {{#if this.selectedTopicId}}
        {{chat-live-pane topicId=this.selectedTopicId}}
      {{/if}}
    </div>
  </div>
</div>
